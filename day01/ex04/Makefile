CC = g++

FLAGS = -Wall -Wextra -Werror -std=c++98

NAME = sed

FILE = text.replace\

SRCS =	main.cpp\
		ReplaceString.cpp\

OBJS = $(patsubst %.cpp, %.o, $(SRCS))

all:
	$(MAKE) $(NAME)

$(NAME): $(OBJS)
	$(CC) $(FLAGS) -o $(NAME) $(OBJS)
	@echo "ex04 is ready to use âœ… "

clean:
			@rm -f	$(OBJS)
			@echo ".o Deleted ðŸ—¿"

fclean: 	clean
			@rm -f	 $(NAME)
			@rm -f	 $(FILE)
			@echo "Deleted ðŸ˜¬"

re:			fclean all

.PHONY: all clean fclean re